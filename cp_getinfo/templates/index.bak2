<!DOCTYPE html>
<html>
<head>
    <title>CPFW: get info</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .container { max-width: 800px; margin: auto; }
        .form-section, .results-section { padding: 20px; border: 1px solid #ccc; border-radius: 5px; margin-bottom: 20px; }
        .divider { height: 2px; background-color: #ccc; margin: 20px 0; }
        h2 { color: #333; }
        pre { background-color: #f4f4f4; padding: 10px; border-radius: 5px; overflow-x: auto; }
        .host-section { margin-bottom: 20px; }
        .command-section { margin-bottom: 10px; }
    </style>
</head>
<body>
    <div class="container">
        <h1>CPFW: get info</h1>
        <!-- Form Section -->
        <div class="form-section">
            {% if not session.username or not session.password %}
            <form method="POST" action="/set_credentials">
                <label for="username">SSH Username:</label>
                <input type="text" id="username" name="username" required>
                <br>
                <label for="password">SSH Password:</label>
                <input type="password" id="password" name="password" required>
                <br>
                <label for="hosts">Enter Hosts (comma-separated):</label>
                <input type="text" id="hosts" name="hosts" required>
                <br>
                <button type="submit">Set Credentials</button>
            </form>
            {% else %}
			<form method="POST" action="/execute">
				<label for="command">Select Command(s):</label>
				<select id="command" name="command" multiple>
					<!-- Options will be added dynamically -->
				</select>
				<br>
				<button type="submit">Execute</button>
			</form>
			<br>
			<form method="POST" action="/reset">
				<button type="submit">Reset Form</button>
			</form>

			<script>
				const commands = [
					{ value: "mplane", text: "Set MDPS (mplane)" },
					{ value: "dplane", text: "Set MDPS (dplane)" },
					{ value: "./gw_chk.sh", text: "GW check" },
					{ value: "./fw_health_check.sh cron", text: "Health Check" },
					{ value: "clish -c 'show configuration static-route'", text: "Get v4 Route Table" },
					{ value: "clish -c 'show configuration static-route' | wc -l", text: "Get v4 Route Count" },
					{ value: "clish -c 'show configuration ipv6 static-route'", text: "Get v6 Route Table" },
					{ value: "clish -c 'show configuration ipv6 static-route' | wc -l", text: "Get v6 Route Count" },
					{ value: "clish -c 'show asset all' | grep -e 'Model' -e 'Serial' | head -n +2", text: "Get Model/Serial#" },
					{ value: "ifconfig Mgmt | grep -i hwa | awk '{print $5}'", text: "Get MAC Add" },
					{ value: "clish -c 'show configuration interface' | grep -e 'eth1-01' -e 'eth1-02'", text: "Get Interfaces" },
					{ value: "cpinfo -y all | head -n 8 | sed 's/\\[[^]]*\\]//g' | grep -i take | sort -u", text: "Get Code Ver" },
					{ value: "fw stat | grep localhost | awk '{print $2}'", text: "Get Installed Policy" },
					{ value: "cphaprob stat | grep local | awk '{print $5}'", text: "Get Cluster Member Status" },
					{ value: "fw tab -t connections -s | grep localhost | awk '{print $4}'", text: "Get Current Connections" },
					{ value: "cpstat os -f multi_cpu | head -n 15", text: "Get CPU Info" },
					{ value: "cplic print", text: "Get License Info" }
				];

				const selectBox = document.getElementById('command');

				commands.forEach(command => {
					const option = document.createElement('option');
					option.value = command.value;
					option.text = command.text;
					selectBox.appendChild(option);
				});

				// Adjust the size of the select box based on the number of options
				selectBox.size = commands.length;
			</script>

            {% endif %}
        </div>
        <!-- Results Section -->
        <div class="divider"></div>
        {% if results %}
        <div class="results-section">
            <h2>Command Execution Results:</h2>
            {% for hostname, host_results in results.items() %}
            <div class="host-section">
                <h3>Results for {{ hostname }}:</h3>
                {% for command, result in host_results.items() %}
                <div class="command-section">
                    <!--<h4>{{ command }}:</h4> -->
                    <pre>{{ result }}</pre>
                </div>
                {% endfor %}
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</body>
</html>
